<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout android:id="@+id/tabsLinearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp" >

        <TextView android:id="@+id/tab1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/actionbar_bg"
            android:text=""/>

        <TextView android:id="@+id/tab2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/actionbar_bg"
            android:text=""/>

        <TextView android:id="@+id/tab3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/actionbar_bg"
            android:text=""/>

    </LinearLayout>

    <View android:id="@+id/indicator"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_below="@+id/tabsLinearLayout"
        android:layout_marginTop="-5dp"
        android:background="#bf81c31e" />

</RelativeLayout>
